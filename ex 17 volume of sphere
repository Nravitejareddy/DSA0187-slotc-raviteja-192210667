#include <iostream>

int main() {
    const double PI = 3.14159;
    double radius, volume;

    std::cout << "Enter the radius of the sphere: ";
    std::cin >> radius;

    volume = (4.0 / 3.0) * PI * radius * radius * radius;

    std::cout << "The volume of the sphere with radius " << radius << " is: " << volume << std::endl;

    return 0;
}

