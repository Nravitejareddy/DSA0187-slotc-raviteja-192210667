#include <iostream>
#include <cmath>

// Overloading the function to find absolute value of an integer
int absoluteValue(int value) {
    return std::abs(value);
}

// Overloading the function to find absolute value of a floating-point number
double absoluteValue(double value) {
    return std::fabs(value);
}

int main() {
    // Absolute value of an integer
    int intValue = -5;
    std::cout << "Absolute value of " << intValue << ": " << absoluteValue(intValue) << std::endl;

    // Absolute value of a floating-point number
    double doubleValue = -3.14;
    std::cout << "Absolute value of " << doubleValue << ": " << absoluteValue(doubleValue) << std::endl;

    return 0;
}
