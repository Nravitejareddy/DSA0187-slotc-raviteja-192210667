#include <iostream>
#include <string>

int main() {
    std::string str;
    char *start, *end;

    std::cout << "Enter a string: ";
    std::getline(std::cin, str);

    start = &str[0];
    end = &str[str.length() - 1];

    while (start < end) {
        char temp = *start;
        *start = *end;
        *end = temp;

        start++;
        end--;
    }

    std::cout << "Reversed string: " << str << std::endl;

    return 0;
}

