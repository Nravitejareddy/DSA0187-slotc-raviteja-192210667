#include <iostream>
#include <cmath>

// Function to find the factorial of an integer
int factorial(int n) {
    if (n == 0 || n == 1) {
        return 1;
    }
    return n * factorial(n - 1);
}

// Overloading the function for a factorial-like calculation of a floating-point number
double factorial(double x) {
    if (x < 0) {
        std::cerr << "Error: Factorial is not defined for negative numbers." << std::endl;
        return NAN;
    }
    
    double result = 1.0;
    for (int i = 2; i <= static_cast<int>(x); ++i) {
        result *= i;
    }
    return result;
}

int main() {
    // Factorial of an integer
    int intValue = 5;
    std::cout << "Factorial of " << intValue << ": " << factorial(intValue) << std::endl;

    // Factorial-like calculation for a floating-point number
    double doubleValue = 5.5;
    std::cout << "Factorial-like calculation for " << doubleValue << ": " << factorial(doubleValue) << std::endl;

    return 0;
}
