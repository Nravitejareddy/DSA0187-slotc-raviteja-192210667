#include <iostream>

class MaxFinder {
public:
    // Overloading the max function for integers
    int max(int a, int b) const {
        return (a > b) ? a : b;
    }

    // Overloading the max function for floating-point numbers
    double max(double a, double b) const {
        return (a > b) ? a : b;
    }

    // Overloading the max function for characters
    char max(char a, char b) const {
        return (a > b) ? a : b;
    }
};

int main() {
    // Create a MaxFinder object
    MaxFinder myMaxFinder;

    // Find the maximum of two integers
    int intResult = myMaxFinder.max(3, 5);

    // Find the maximum of two floating-point numbers
    double doubleResult = myMaxFinder.max(3.5, 5.2);

    // Find the maximum of two characters
    char charResult = myMaxFinder.max('A', 'B');

    // Display the results
    std::cout << "Maximum of two integers: " << intResult << std::endl;
    std::cout << "Maximum of two floating-point numbers: " << doubleResult << std::endl;
    std::cout << "Maximum of two characters: " << charResult << std::endl;

    return 0;
}
