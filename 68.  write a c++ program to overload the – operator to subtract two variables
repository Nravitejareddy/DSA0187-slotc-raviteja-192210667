#include <iostream>

class Subtracter {
private:
    int value;

public:
    // Constructor
    Subtracter(int initValue) : value(initValue) {
    }

    // Overloading the - operator as a member function
    Subtracter operator-(const Subtracter& other) const {
        // Subtraction operation
        return Subtracter(value - other.value);
    }

    // Function to get the current value
    int getValue() const {
        return value;
    }
};

int main() {
    Subtracter firstSubtracter(10);
    Subtracter secondSubtracter(5);

    std::cout << "First Subtracter value: " << firstSubtracter.getValue() << std::endl;
    std::cout << "Second Subtracter value: " << secondSubtracter.getValue() << std::endl;

    // Using the overloaded - operator
    Subtracter result = firstSubtracter - secondSubtracter;

    std::cout << "Result of subtraction: " << result.getValue() << std::endl;

    return 0;
}
