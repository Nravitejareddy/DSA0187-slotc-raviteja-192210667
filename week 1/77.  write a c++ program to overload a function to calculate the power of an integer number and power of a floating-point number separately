#include <iostream>
#include <cmath>

// Overloading the function to calculate power of an integer
int power(int base, int exponent) {
    return static_cast<int>(std::pow(base, exponent));
}

// Overloading the function to calculate power of a floating-point number
double power(double base, double exponent) {
    return std::pow(base, exponent);
}

int main() {
    // Power of an integer
    int intBase = 2;
    int intExponent = 3;
    std::cout << "Power of " << intBase << " to the exponent " << intExponent << ": " << power(intBase, intExponent) << std::endl;

    // Power of a floating-point number
    double doubleBase = 2.5;
    double doubleExponent = 2.0;
    std::cout << "Power of " << doubleBase << " to the exponent " << doubleExponent << ": " << power(doubleBase, doubleExponent) << std::endl;

    return 0;
}
