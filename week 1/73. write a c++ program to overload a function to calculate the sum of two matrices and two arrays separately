#include <iostream>

// Overloading the function for matrices
void addMatrices(const int mat1[2][2], const int mat2[2][2], int result[2][2]) {
    for (int i = 0; i < 2; ++i) {
        for (int j = 0; j < 2; ++j) {
            result[i][j] = mat1[i][j] + mat2[i][j];
        }
    }
}

// Overloading the function for arrays
void addArrays(const int arr1[3], const int arr2[3], int result[3]) {
    for (int i = 0; i < 3; ++i) {
        result[i] = arr1[i] + arr2[i];
    }
}

int main() {
    // Adding matrices
    int matrix1[2][2] = {{1, 2}, {3, 4}};
    int matrix2[2][2] = {{5, 6}, {7, 8}};
    int resultMatrix[2][2];

    addMatrices(matrix1, matrix2, resultMatrix);

    std::cout << "Sum of matrices:" << std::endl;
    for (int i = 0; i < 2; ++i) {
        for (int j = 0; j < 2; ++j) {
            std::cout << resultMatrix[i][j] << " ";
        }
        std::cout << std::endl;
    }

    // Adding arrays
    int array1[3] = {1, 2, 3};
    int array2[3] = {4, 5, 6};
    int resultArray[3];

    addArrays(array1, array2, resultArray);

    std::cout << "Sum of arrays:" << std::endl;
    for (int i = 0; i < 3; ++i) {
        std::cout << resultArray[i] << " ";
    }
    std::cout << std::endl;

    return 0;
}
