#include <iostream>
#include <string>

class Car {
private:
    std::string make;
    std::string model;
    int year;

public:
    // Constructor
    Car(const std::string& carMake, const std::string& carModel, int carYear) : make(carMake), model(carModel), year(carYear) {
        std::cout << "A new car object is created: " << year << " " << make << " " << model << std::endl;
    }

    // Destructor
    ~Car() {
        std::cout << "The car object is being destroyed: " << year << " " << make << " " << model << std::endl;
    }

    // Function to display car information
    void displayCarInfo() {
        std::cout << "Car: " << year << " " << make << " " << model << std::endl;
    }
};

int main() {
    // Create a Car object
    Car myCar("Toyota", "Camry", 2022);

    // Display car information
    myCar.displayCarInfo();

    // The destructor will be automatically called when the program ends or when the object goes out of scope

    return 0;
}
