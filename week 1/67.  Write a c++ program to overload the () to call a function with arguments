#include <iostream>

class FunctionCaller {
public:
    // Overloading the () operator as a member function
    int operator()(int a, int b) const {
        return a + b;
    }
};

int main() {
    // Create a FunctionCaller object
    FunctionCaller addFunction;

    // Call the function using overloaded () operator
    int result = addFunction(3, 5);

    // Display the result
    std::cout << "Result of the function call: " << result << std::endl;

    return 0;
}
