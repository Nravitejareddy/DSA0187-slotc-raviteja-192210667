#include <iostream>

class Adder {
public:
    // Overloading the add function for integers
    int add(int a, int b) const {
        return a + b;
    }

    // Overloading the add function for floating-point numbers
    double add(double a, double b) const {
        return a + b;
    }
};

int main() {
    // Create an Adder object
    Adder myAdder;

    // Add two integers
    int intResult = myAdder.add(3, 5);

    // Add two floating-point numbers
    double doubleResult = myAdder.add(3.5, 5.2);

    // Display the results
    std::cout << "Result of adding integers: " << intResult << std::endl;
    std::cout << "Result of adding floating-point numbers: " << doubleResult << std::endl;

    return 0;
}
