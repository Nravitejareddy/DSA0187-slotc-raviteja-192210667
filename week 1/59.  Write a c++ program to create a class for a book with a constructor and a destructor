#include <iostream>
#include <string>

class Book {
private:
    std::string title;
    std::string author;
    int publicationYear;

public:
    // Constructor
    Book(const std::string& bookTitle, const std::string& bookAuthor, int year) : title(bookTitle), author(bookAuthor), publicationYear(year) {
        std::cout << "A new book object is created: \"" << title << "\" by " << author << " (" << publicationYear << ")" << std::endl;
    }

    // Destructor
    ~Book() {
        std::cout << "The book object is being destroyed: \"" << title << "\" by " << author << " (" << publicationYear << ")" << std::endl;
    }

    // Function to display book information
    void displayBookInfo() {
        std::cout << "Book: \"" << title << "\" by " << author << " (" << publicationYear << ")" << std::endl;
    }
};

int main() {
    // Create a Book object
    Book myBook("The Catcher in the Rye", "J.D. Salinger", 1951);

    // Display book information
    myBook.displayBookInfo();

    // The destructor will be automatically called when the program ends or when the object goes out of scope

    return 0;
}
